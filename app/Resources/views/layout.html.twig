            <ul class="nav navbar-nav navbar-left">
				<li class="active"> <a href="{{ path('blog_homepage') }}">Accueil</a> </li>
			 <li> <a href="{{ path('blog_article_test') }}">Ajouter une nouvelle information</a> </li>
